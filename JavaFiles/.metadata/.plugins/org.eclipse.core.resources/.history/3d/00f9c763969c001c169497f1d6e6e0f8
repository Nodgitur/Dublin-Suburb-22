	float number1 = 1;
	float number2 = 2;

	enum Operation{
		ADDITION = 0;
		SUBTRACTION = 1;
		MULTIPLICATION = 2;
		DIVISION = 3;
	}

	Operation operation = 3;

}

message CalculateResponse{

	float result = 1;
	string message = 2;

}

